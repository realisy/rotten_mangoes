<footer>
  <small>
    <% if current_user %>
        Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
        <% if current_user.admin %>
            Head over to admin page (<%= link_to "Users", admin_users_path %>)
        <% end %>
    <% else %>
        <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
    <% if is_impersonating? %>
        <%= link_to "end_impersonate", end_impersonate_admin_users_path, method: :put%>
    <% end %>
  </small>
</footer>
